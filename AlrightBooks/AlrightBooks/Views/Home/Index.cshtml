@model AlrightBooks.Models.MenuEnum
@{

    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Books" asp-action="Genre">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label  class="control-label">Search by Genre</label>
                <select name="genre" class="form-control" asp-items="@Html.GetEnumSelectList(typeof(MenuEnum.BookCat))"></select>
                <span  class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>
        </form>
    </div>
    
</div >



