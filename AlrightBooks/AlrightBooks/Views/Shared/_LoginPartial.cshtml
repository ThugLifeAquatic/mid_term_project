@using Microsoft.AspNetCore.Identity
@using AlrightBooks.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

    <link rel="stylesheet" href="~/css/site.css" type="text/css" />
@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage"style="color: floralwhite;">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link"style="color: floralwhite;">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="" asp-controller="Account" asp-action="Register"style="color: floralwhite;">Register</a></li>
        <li><a asp-area="" asp-controller="Account" asp-action="Login"style="color: floralwhite;">Log in</a></li>
    </ul>
}
